<p id="notice"><%= notice %></p>

<h1>Log In</h1>

<% if flash[:notice] %>
<p class="alert alert-success"><%= flash[:notice] %></p>
<% end %>
<% if flash[:error_message]%>
<p class="alert alert-danger"><%= flash[:error_message] %></p>
<% end %>
<%= form_with(url: session_path) do %>
    <%=label_tag :username %>
    <%=text_field_tag :username %>
    <%=label_tag :password %>
    <%=password_field_tag :password %>
    <%=submit_tag "Log in" %>
<% end %>

<h3>New User? Create An Account with us!</h3>

<button><%= link_to 'Create Account', new_user_path %></button>

