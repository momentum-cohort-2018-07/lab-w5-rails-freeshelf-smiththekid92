<h1>Editing Book</h1>


<%= form_with scope: :article, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :author%><br>
    <%= form.text_field :text %>
  </p>

   <p>
    <%= form.label :genre%><br>
    <%= form.text_field :text %>
  </p>
 
<%= render 'form', book: @book %>

<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
