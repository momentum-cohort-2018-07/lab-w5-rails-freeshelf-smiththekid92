<p id="notice"><%= notice %></p>

<h1>Books</h1>
<br>

<%= link_to 'New Book', new_book_path %>
<br>

<table>
    <tr>
      <th>Title:</th>
      <th>Author:</th>
      <th>Genre:</th>
      <th>Link:</th>
      <th>User ID:</th>
    </tr>

</table>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.url %></td>
        <td><%= book.user_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


